<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Canciones.MediaPlayerActivity"
    android:layout_gravity="center_vertical"
android:gravity="center"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tituloCancion"
        android:layout_width="374dp"
        android:layout_height="106dp"
        android:ellipsize="marquee"
        android:padding="10dp"
        android:text="Titulo de la canción"
        android:textAlignment="center"
        android:textColor="@color/Letters"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/clave"
        android:layout_width="315dp"
        android:layout_height="298dp"
        app:srcCompat="@drawable/iniciocascos"
/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="323dp"
        android:layout_height="16dp"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/Letters"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/prevBtn"
            android:layout_width="113dp"
            android:layout_height="92dp"
            app:tint="@color/blueButton"
            app:srcCompat="@drawable/previous" />

        <ImageView
            android:id="@+id/pauseBtn"
            android:layout_width="123dp"
            android:layout_height="91dp"
            />

        <ImageView
            android:id="@+id/nextBtn"
            android:layout_width="123dp"
            android:layout_height="92dp"
            app:srcCompat="@drawable/next"
            app:tint="@color/blueButton"/>

    </LinearLayout>


